::Import("unittest.ni")
::Import("lang.ni")
::Import("assert.ni")

::FIXTURE("root")

::name <- "_ROOT_"

::anotherRoot <- {
  name = "anotherRoot"
}

::anotherRoot2 <- {
  name = "anotherRoot2"
}

function ::GetRootName() {
  return ::name
}

function ::GetAnotherRootName() {
  return ::name
}
GetAnotherRootName.SetRoot(anotherRoot)

::TEST("root","base",#() {
  ::CHECK_EQUAL("_ROOT_",::GetRootName())
  ::CHECK_EQUAL("anotherRoot",::GetAnotherRootName())
})
