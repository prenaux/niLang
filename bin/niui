#!/bin/bash
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [ ! -e "$1" ]; then
    echo "E/Couldn't find niui script '$1'."
    echo ""
    echo "usage:"
    echo "  niui script.niui [ script arguments ... ]"
    echo ""
    exit 1
fi
. "$SCRIPT_DIR/ni-bash-setenv.sh" ra
SCRIPTNAME=$1
APPNAME=`basename $SCRIPTNAME`

set -ex
"${NIWVM}"  -I "$SCRIPT_DIR/../scripts" -A "$APPNAME" -e app.ni -startApp "$SCRIPTNAME" "$@"
