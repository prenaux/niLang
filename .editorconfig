root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

# Because npm always use 2 spaces
[package.json]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.{c,cpp,cpp2,cni,h,hpp,cxx,hxx,inl}]
indent_size = 2

[*.sh]
indent_size = 4
