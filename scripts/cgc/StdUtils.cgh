float2 stdUtil_VectorToSphereMapCoo(float3 r) {
  float m = -2.0 * sqrt( r.x*r.x + r.y*r.y + (r.z+1.0)*(r.z+1.0) );
  return float2(r.x/m + 0.5,
                r.y/m + 0.5);
}

