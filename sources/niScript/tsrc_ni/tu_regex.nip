::Import("unittest.ni")
::Import("regex.ni")

::FIXTURE("regex")

::TEST("regex","base",#() {
  local pcre = ::regex.pcre("http://.*.letv.*com/.*[Ll]etv[Pp]layer.*swf.*")
  ::CHECK(pcre.Match("http://www.letv.com/stuff/LetvPlayer.swf"));
  ::CHECK(!pcre.Match("http://www.sohu.com/stuff/LetvPlayer.swf"));
})
