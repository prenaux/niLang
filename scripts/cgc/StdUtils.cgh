///////////////////////////////////////////////
float3x3 stdUtil_Invert3x3(float3x3 M)
{
  float D = determinant( M );
  float3x3 T = transpose( M );
  return float3x3(
      cross(T[1],T[2]),
      cross(T[2],T[0]),
      cross(T[0],T[1])) / D;
}
half3x3 stdUtil_Invert3x3(half3x3 M)
{
  half D = determinant( M );
  half3x3 T = transpose( M );
  return half3x3(
      cross(T[1],T[2]),
      cross(T[2],T[0]),
      cross(T[0],T[1])) / D;
}

///////////////////////////////////////////////
float3x3 stdUtil_Invert3x3NoD( float3x3 M )
{
  float3x3 T = transpose( M );
  return float3x3(
      cross(T[1],T[2]),
      cross(T[2],T[0]),
      cross(T[0],T[1]));
}
half3x3 stdUtil_Invert3x3NoD( half3x3 M )
{
  half3x3 T = transpose( M );
  return half3x3(
      cross(T[1],T[2]),
      cross(T[2],T[0]),
      cross(T[0],T[1]));
}

